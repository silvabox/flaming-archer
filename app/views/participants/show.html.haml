- model_class = Participant
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @participant.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @participant.email
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @participant.phone

#participant_events
  %ul.events_list#participant_events_list
    - @participant.events.each do |event|
      %li.event
        = link_to event.name, [@participant, event], :method => 'delete'
#other_events
  %ul.events_list#other_events_list
    - @events.each do |event|
      %li.event
        = link_to event.name, [@participant, event], :method => 'post'
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), participants_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_participant_path(@participant), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), participant_path(@participant), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
