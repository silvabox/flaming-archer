= simple_form_for @participant, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :email
  = f.input :phone
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), participants_path, :class => 'btn'
